{
  "name": "hmpps-appointment-reminders-ui",
  "version": "0.0.1",
  "description": "Appointment Reminders",
  "repository": "git@github.com:ministryofjustice/hmpps-appointment-reminders-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "node esbuild/esbuild.config.js --build",
    "build:watch": "node esbuild/esbuild.config.js --build --watch",
    "dev-server": "node esbuild/esbuild.config.js --dev-server",
    "start:dev": "concurrently -k -n 'Build,Server,WireMock' 'npm run build:watch' 'npm run dev-server' 'npm run wiremock'",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "wiremock": "wiremock --port 9090 --root-dir wiremock --local-response-templating",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.875.0",
    "@js-joda/core": "^5.6.5",
    "@js-joda/locale": "^4.15.2",
    "@js-joda/locale_en": "^4.15.1",
    "@js-joda/timezone": "^2.22.0",
    "@json2csv/plainjs": "^7.0.6",
    "@ministryofjustice/frontend": "^5.1.5",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.1",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1",
    "@ministryofjustice/hmpps-rest-client": "^0.0.1",
    "@types/qs": "^6.14.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.11.2",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "notifications-node-client": "^8.2.1",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.8.2",
    "superagent": "^10.2.3"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.3",
    "@tsconfig/node24": "^24.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.32.1",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "cypress": "^14.5.4",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.9",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.5",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "wiremock": "^3.13.1"
  },
  "overrides": {
    "cldr-data-downloader": "1.1.0"
  }
}
